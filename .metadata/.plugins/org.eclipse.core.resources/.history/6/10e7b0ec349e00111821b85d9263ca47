package com.game.fickapets;

import android.graphics.drawable.Drawable;
import android.widget.ImageView;

public class UrlImageViewHandler {
	public static void setUrlDrawable(final ImageView imageView, final String url, final Drawable defaultDrawable) {
		if (url == null || url.equals("")) {
			if (imageView != null) {
				imageView.setImageDrawable(defaultDrawable);
			}
			return;
		}
		final String imageFilename = getFilenameForUrl(url);
	}
	
	private String getFilenameForUrl(final String url) {
		return "" + url.hashCode() + ".urlImage";
	}
}
