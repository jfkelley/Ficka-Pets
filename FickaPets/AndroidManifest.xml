<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.fickapets"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".FickaPetsLaunch"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FickaPetsStart"
            android:label="@string/app_name" >
        </activity>
        <service android:name=".PetNotifier" android:exported="false" />
        <service android:name=".BattleNotifier" android:exported="false" />
        <activity
        	android:name=".ItemShop"
        	android:label="@string/itemShopLabel" >
        </activity>
        <activity
            android:name=".FindFriendsActivity"
            android:label="@string/findFriend" >
        </activity>
        <activity
            android:name=".BattleActivity"
            android:label="@string/battleLabel" >
        </activity>
        <activity
            android:name=".BattleListActivity"
            android:label="@string/battleLabel" >
        </activity>
        
        <activity
            android:name=".CatchCoins"
            android:label="@string/catchCoins" >
        </activity>
        <activity
            android:name=".TicTacToe"
            android:label="@string/ticTacToe" >
        </activity>
        <activity
            android:name=".ChoosePetActivity"
            android:label="@string/choosePetTitle" >
        </activity>
    </application>

</manifest>