<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#334a53" >

	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1" 
		android:background="#537903">
		<ImageView
			android:src="@drawable/main_background"
			android:layout_gravity="top|fill_horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:scaleType="fitXY" />
		<ImageView
			android:id="@+id/petImageView"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</FrameLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="65dp"
		android:layout_gravity="center_horizontal"
		android:orientation="horizontal" >
			<ImageView
				android:src="@drawable/food_button"
				android:onClick="feedPressed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			android:scaleType="fitXY"  />
			<ImageView
				android:id="@+id/sleepButton"
				android:src="@drawable/sleep_button"
				android:onClick="sleepPressed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			android:scaleType="fitXY"  />
			<ImageView
				android:src="@drawable/shop_button"
				android:onClick="shopPressed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			android:scaleType="fitXY"  />
			<ImageView
				android:src="@drawable/games_button"
				android:onClick="gamePressed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			android:scaleType="fitXY"  />
			<ImageView
				android:src="@drawable/battle_button"
				android:onClick="battlePressed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			android:scaleType="fitXY"  />
	</LinearLayout>

</LinearLayout>